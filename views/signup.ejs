<% include layouts/head %>
<body>
<div class="container">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <div class="panel panel-default">
                <div class="panel-heading">Register</div>
                <div class="panel-body">
                               <% if (message != null) { %>
          <div class="alert-danger"><%= message %></div>
        <% } %>

        <form class="form-horizontal" action="/signup" method="post">
          <div class="form-group">
              <label>Username</label>
              <input type="text" class="form-control" name="username" placeholder="username" required="true">
          </div>
          <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password" placeholder="password" required="true" />
          </div>
          <div>
            <input type="submit" class=class="btn btn-primary" value="Submit" />
          </div>
        </form>
      </div>
      <hr>
      <span class="fa fa-sign-in"> Already have an account?<a href="/login"> Login</a></span>
      <p>Or go <a href="/">home</a>.</p>
    </div>
                       
                </div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
